@{
    ViewData["Title"] = "Contact Us";
}
@model NEPATechDotnetCoreMVC.ViewModel.ContactViewModel
@*<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>*@

<div class="inner">
    <div class="contactHeaderWrapper">
        @Html.Partial("_HeaderPartial", null)
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="formwrapper">
                        <h4>Get in Touch</h4>
                        <p id="description">Please fill out this quick form and we will be in touch</p>
                        @{
                            if (Model.isComplaintSent)
                            {
                                <p name="submitValidation" id="submitValidation">Your concerns have been heard, please wait for someone to contact you back!</p>

                            }
                        }

                        <form runat="server" method="post">
                            <fieldset>
                                <input runat="server" type="text" id="txtName" name="fname" placeholder="First Name" required/>
                                <br />
                                <input runat="server" type="text" id="txtName" name="lname" placeholder="Last Name" required/>
                                <br />
                                <input runat="server" type="text" id="txtEmail" name="email" placeholder="Your email address" required/>
                                <br />
                                <textarea runat="server" rows="4" id="txtMessage" name="complaint" placeholder="What's Wrong" cols="50" required></textarea>
                                <br />
                                <input runat="server" type="submit" name="submitComplaint" value="Send" class="special fit" />
                                <button type="button" class="button special fit small">View Complaints</button>
                            </fieldset>
                        </form>
                        
                    </div>
                </div>
                <div class="col" id="contactInfo">
                    <div class="float-md">
                        <article id="extraContactInfo">
                            <div class="row">
                                <h5>Connect with us:</h5>
                                <p id="description">For support contact us because you want to you can reach us at email@email.com</p>
                            </div>
                            <div class="row">
                                <h6>Office Building</h6>
                                <p id="description">123 Main Street, Suite 123, Maintown, Maine,12345 USA</p>
                            </div>
                            <div class="row">
                                <h6>Office Building</h6>
                                <p id="description">123 Main Street, Suite 123, Maintown, Maine,12345 USA</p>
                            </div>

                        </article>
                    </div>
                </div>
            </div>
        </div>
        @* Added the style inline to easily override the styling, doesn't need any borders. *@
        
        <div class="container" style="border:none;">
            <div class="row">
                <div class="col">
                    <div id="eventsContainer" class="center-block">
                        <h1>Check out our events!</h1>
                        <p class="text-muted">All throughout NEPA we provide those classes that do things so that people can learn all about tech and stuff. Sometimes it's interesting, but sometimes it's like pulling teeth without novacaine... Oh well</p>
                        @Html.ActionLink("Upcoming events", "eventsRedirect", "ContactUs", null, new { @class = "button special", @target = "_blank" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>