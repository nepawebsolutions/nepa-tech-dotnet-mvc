<div class="container">
    <div class="row align-items-center">
        <div class="col"></div>
        <div class="col"></div>
        <div class="col"></div>
        <div class="col"></div>
        <div class="col"></div>
        <div class="col-xs-offset-1 col-xs-6 col-sm-6 col-md-6">
            <div class="registerMenu">
                @Html.Partial("_HeaderPartialNoIcons", null)
                <div class="registerMenuContent">
                    <div asp-validation-summary="All"></div>
                    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" autocomplete="off">

                        @Html.Hidden("ReturnUrl", Context.Request.Path)
                        <div asp-validation-summary="All"></div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col">
                                    <label asp-for="FirstName"></label>
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName"></span>
                                </div>
                                <div class="col">
                                    <label asp-for="LastName"></label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName"></span>
                                </div>
                            </div>


                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password"></span>
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword"></span>

                        </div>
                        <div class="registerFooter">
                            <input type="submit" class="special fit" value="Register" />
                        </div>

                    </form>
                </div>
                <div class="loginFooter">
                </div>
            </div>
        </div>
        <div class="col"></div>
        <div class="col"></div>
        <div class="col"></div>
        <div class="col"></div>
        <div class="col"></div>
    </div>
</div>
