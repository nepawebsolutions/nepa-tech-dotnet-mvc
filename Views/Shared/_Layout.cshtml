@using Microsoft.AspNetCore.Identity
@using NEPATechDotnetCoreMVC.ViewModel.AccountViewModels;

@inject SignInManager<ApplicationUser> _signInManager;
@inject UserManager<ApplicationUser> _userManager;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/css/font-awesome.css" />
    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.16/dist/vue.js"></script>

</head>
<body>

    <!-- Wrapper -->
    <div id="wrapper">

        <!-- Main -->
        <div id="main" class="container-fluid">
            @RenderBody()
        </div>

        <!-- Sidebar -->
        <div id="sidebar">
            <div class="inner">
                <!-- Menu -->
                <nav id="menu">
                    <header class="major">
                        <h2>Menu</h2>
                    </header>
                    <ul>
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Homepage</a></li>
                        <li><a asp-area="" asp-controller="ContactUs" asp-action="eventsRedirect" target="_blank">Events</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Members">Members</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a></li>
                    </ul>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <div class="login">
                            @Html.ActionLink("Login", "Login", "Account", null, new { @class = " " })
                            @Html.ActionLink("Register", "Register", "Account", null, new { @class = " " })
                        </div>
                    }
                    else
                    {
                        @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "btn special fit" })

                    }
                </nav>
            </div>
        </div>
    </div>


    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="http://code.jquery.com/ui/1.8.23/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/lib/skel.min.js"></script>
    <script src="~/lib/util.js"></script>
    <script src="~/lib/main.js"></script>
    <script type="text/javascript">
    </script>
</body>
</html>
